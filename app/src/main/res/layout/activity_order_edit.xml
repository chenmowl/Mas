                        android:layout_marginRight="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_bar"
                        />
                    
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cline_low"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/order_edit_title_remark"
                        android:textColor="@color/text_color_bar"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_order_edit_remark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/cart_spec_tv"
                        android:textColorHint="@color/et_hint_gray"
                        android:hint="@string/order_edit_hint_remark"
                        android:singleLine="true"
                        android:background="@color/white"
                        android:maxLength="30"
                        />

                </LinearLayout>

            </LinearLayout>


