                        android:layout_marginRight="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_bar"
                        />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cline_low"
                    />

                <RelativeLayout
