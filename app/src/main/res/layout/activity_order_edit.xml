                            android:textSize="14sp"
                            />
                        <TextView
                            android:id="@+id/tv_order_edit_benefit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/main_color_red"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_edit_money_unit_decrease"
                            android:layout_toLeftOf="@id/tv_order_edit_benefit"
                            android:textColor="@color/main_color_red"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>

