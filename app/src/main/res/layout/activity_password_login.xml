<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/titlebar_normal"
        android:id="@+id/temp_password_login_head"
        />

    <include layout="@layout/network_loading_av_bg_transparent_44" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/temp_password_login_head"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:inputType="number"
                android:id="@+id/et_login_password_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/login_edit_hint_phone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_bar"
                android:textColorHint="@color/et_hint_gray"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/image_password_phone_clear"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/clear"
                android:visibility="invisible"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cline_low" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:orientation="horizontal">


            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_login_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/login_hint_input_password"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_bar"
                android:textColorHint="@color/et_hint_gray"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/image_password_clear"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/clear"
                android:visibility="invisible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_password_login_done"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_out"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:textColor="@color/login_agreement_blue"
            android:text="@string/forget_password"/>

    </LinearLayout>

</RelativeLayout>