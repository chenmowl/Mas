<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:id="@+id/rl_no_data"
    >
    <TextView
        android:id="@+id/tv_no_data_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/order_hint_no_order"
        android:textSize="16sp"
        android:textColor="@color/cart_spec_tv"
        />
    <ImageView
        android:id="@+id/iv_no_data_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/order_wudingdan"
        android:layout_above="@id/tv_no_data_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/btn_stroll_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_data_hint"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_ring_red"
        android:paddingBottom="12dp"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:paddingTop="12dp"
        android:text="刷新"
        android:textColor="@color/main_color_red"
        android:textSize="12sp" />


</RelativeLayout>