<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_pro"
        android:layout_width="105dp"
        android:layout_height="154dp"
        android:background="@android:color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_pro"
            android:layout_width="87dp"
            android:layout_height="79dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            fresco:placeholderImage="@mipmap/common_center_placeholder" />

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sdv_pro"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="四特酒业经典品牌"
            android:textColor="@color/text_color_bar"
            android:textSize="@dimen/home_grid_tv_size" />

        <TextView
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_pro_price"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="9dp"
            android:text="¥ 123"
            android:textColor="@color/main_color_red"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="9dp"
            android:text="¥ 123"
            android:textColor="@color/cart_tv_gray"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/add"
            style="@style/BtnAddToCart"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="9dp" />


    </RelativeLayout>


</LinearLayout>