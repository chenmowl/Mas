<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/llyt_indicaters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/indicator01"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/dot_splash_selected" />

        <ImageView
            android:id="@+id/indicator02"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/dot_splash_normal" />

        <ImageView
            android:id="@+id/indicator03"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/dot_splash_normal" />

    </LinearLayout>

</RelativeLayout>