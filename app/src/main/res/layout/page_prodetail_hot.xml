<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_pro"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:clickable="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_pro"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:scaleType="fitXY"
            fresco:placeholderImage="@mipmap/common_center_placeholder" />

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sdv_pro"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="四特酒业经典品牌"
            android:textColor="@color/text_color_bar"
            android:textSize="@dimen/home_grid_tv_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_pro_name"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 123"
                android:textColor="@color/main_color_red"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vip_price"
                android:text="¥ 123"
                android:textColor="@color/cart_tv_gray"
                android:textSize="11sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_pro_name"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingRight="9dp">

            <ImageView
                style="@style/BtnAddToCart"
                android:layout_centerVertical="true" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
