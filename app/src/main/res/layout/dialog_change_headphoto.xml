<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_ch_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_ch_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:background="@drawable/bg_pop_takephoto"
        android:textColor="@color/main_color_blue"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_ch_cancel"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_pop_takephoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_ch_takepic"
            android:layout_width="match_parent"
            android:layout_height="44dp"

            android:gravity="center"
            android:text="@string/take_photo"
            android:textColor="@color/main_color_blue"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cline_low"
            />

        <TextView
            android:id="@+id/dialog_ch_aldum"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/my_album"
            android:textColor="@color/main_color_blue"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>