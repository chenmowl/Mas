<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"></FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_bar_height"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="@dimen/bottom_bar_image_size"
                        android:layout_height="@dimen/bottom_bar_image_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tab_home_selector" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_home"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/bottom_bar_margin"
                        android:text="首页"
                        android:textColor="@color/text_color_bar"
                        android:textSize="@dimen/bottom_bar_text_size" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/image_cart"
                            android:layout_width="@dimen/bottom_bar_image_size"
                            android:layout_height="@dimen/bottom_bar_image_size"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/tab_cart_selector" />


                        <TextView
                            android:id="@+id/tv_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_cart"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/bottom_bar_margin"
                            android:text="购物车"
                            android:textColor="@color/text_color_bar"
                            android:textSize="@dimen/bottom_bar_text_size" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_order"
                        android:layout_width="@dimen/bottom_bar_image_size"
                        android:layout_height="@dimen/bottom_bar_image_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tab_order_selector" />

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_order"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/bottom_bar_margin"
                        android:text="订单"
                        android:textColor="@color/text_color_bar"
                        android:textSize="@dimen/bottom_bar_text_size" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_mine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_mine"
                        android:layout_width="@dimen/bottom_bar_image_size"
                        android:layout_height="@dimen/bottom_bar_image_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tab_mine_selector" />

                    <TextView
                        android:id="@+id/tv_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_mine"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/bottom_bar_margin"
                        android:text="我的"
                        android:textColor="@color/text_color_bar"
                        android:textSize="@dimen/bottom_bar_text_size" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/cline_low" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

</RelativeLayout>