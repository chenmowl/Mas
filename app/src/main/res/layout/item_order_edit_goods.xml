<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_item_oeg_icon"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:contextClickable="false"
        android:clickable="false"
        fresco:placeholderImage="@mipmap/ic_launcher"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:actualImageScaleType="focusCrop"
        android:background="@color/cline_low"
        fresco:roundingBorderColor="#e1e1e1"
        fresco:roundingBorderWidth="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/sdv_item_oeg_icon"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@id/sdv_item_oeg_icon"
        android:layout_alignTop="@id/sdv_item_oeg_icon"
        >
        <TextView
            android:id="@+id/tv_item_oeg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="53度茅台飞天 名贵白酒正品"
            android:textSize="12sp"
            android:textColor="@color/text_color_bar"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specs_colon"
                android:textColor="@color/hint_text_gray"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_item_oeg_specs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hint_text_gray"
                android:textSize="12sp"
                android:text="500ml"
                android:layout_marginLeft="6dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_colon"
                    android:textColor="@color/main_color_red"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color_red"
                    android:textSize="12sp"
                    android:text="@string/order_edit_money_unit"
                    android:layout_marginLeft="6dp"
                    />

                <TextView
                    android:id="@+id/tv_item_oeg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color_red"
                    android:textSize="12sp"
                    android:text="666.00"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_colon"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_gray"
                    />
                <TextView
                    android:id="@+id/tv_item_oeg_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_gray"
                    />

            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/cline_low"
        android:layout_below="@id/sdv_item_oeg_icon"

        />
    




</RelativeLayout>