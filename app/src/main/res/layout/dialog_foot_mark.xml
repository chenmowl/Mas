<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_cs_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:background="#E5FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="浏览足迹"
                android:textColor="@color/text_color_bar"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_page_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(4/10)"
                android:textColor="@color/text_color_gray02"
                android:textSize="12sp" />

        </LinearLayout>

        <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/vp_foot_mark"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="35dp"-->
        <!--android:clipChildren="false" />-->

        <com.eme.mas.customeview.coverflow.CoverFlow
            android:id="@+id/gallery_horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:autoCycle="false"
            app:coverage="0"
            app:flingAllow="true"
            app:orientation="horizontal"
            app:spacing="25dip"
            app:unselectedAlpha="0.7"
            app:unselectedScale="0.8" />


    </LinearLayout>


</RelativeLayout>