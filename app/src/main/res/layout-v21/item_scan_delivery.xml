<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="45dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:background="#2699F8" />

        <View
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/scan_round" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:background="#2699F8" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_message"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:foreground="@drawable/card_foreground_selector"
        android:stateListAnimator="@anim/touch_raise"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="商品出库"
                    android:textColor="@color/text_color_bar"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="2016.6.25 11:30"
                    android:textColor="@color/text_color_bar"
                    android:textSize="11sp" />


                <View
                    style="@style/CLineHor"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="仓库: c货仓"
                    android:textColor="@color/cart_spec_tv"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_info02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/tv_info01"
                    android:text="配送员: 8301"
                    android:textColor="@color/cart_spec_tv"
                    android:textSize="13sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>